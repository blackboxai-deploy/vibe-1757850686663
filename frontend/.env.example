# LTI OMT Meeting System - Frontend Environment Configuration
# Copy this file to .env and update with your actual values

# API Configuration
# Backend server URL - update to match your backend deployment
REACT_APP_API_URL=http://localhost:5000

# Application Configuration
REACT_APP_APP_NAME="LTI OMT Meeting System"
REACT_APP_VERSION=4.0.0

# Feature Flags
REACT_APP_ENABLE_LOGGING=false
REACT_APP_ENABLE_DEBUG=false
REACT_APP_ENABLE_PDF_EXPORT=true
REACT_APP_ENABLE_EMAIL_NOTIFICATIONS=true

# SharePoint Configuration (when deploying to SharePoint)
# REACT_APP_SHAREPOINT_MODE=true
# REACT_APP_SHAREPOINT_TENANT=yourcompany
# REACT_APP_SHAREPOINT_SITE_URL=https://yourcompany.sharepoint.com/sites/lti-omt

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,application/vnd.ms-excel

# UI Configuration
REACT_APP_THEME=default
REACT_APP_ENABLE_DARK_MODE=false

# Performance Configuration
REACT_APP_ENABLE_LAZY_LOADING=true
REACT_APP_CHUNK_SIZE_WARNING_LIMIT=512000

# Analytics Configuration (optional)
# REACT_APP_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# REACT_APP_ENABLE_ANALYTICS=false

# Error Reporting (optional)
# REACT_APP_SENTRY_DSN=https://your-sentry-dsn
# REACT_APP_ENABLE_ERROR_REPORTING=false

# Development Configuration
# These should only be used in development environment
GENERATE_SOURCEMAP=false
REACT_APP_ENABLE_CONSOLE_LOGS=false